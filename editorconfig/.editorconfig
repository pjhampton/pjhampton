# editorconfig.org
root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
max_line_length = 80
trim_trailing_whitespace = true

[*.txt]
indent_size = 2
indent_style = tab
max_line_length = 50

[*.go]
indent_size = 8
indent_style = tab

[*.{js,json}]
indent_size = 4
indent_style = space

[*.java]
indent_size = 4
indent_style = space
max_line_length = 80

[*.{sc,scala,kt}]
indent_size = 2
indent_style = space
max_line_length = 80

[*.{rb,py}]
indent_size = 2
indent_style = space

[*.yml]
indent_size = 2

[*.md]
indent_size = 2
indent_style = space

[COMMIT_EDITMSG]
max_line_length = 60
